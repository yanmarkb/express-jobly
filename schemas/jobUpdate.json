{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://your.company.com/jobUpdate.schema.json",
    "type": "object",
    "properties": {
        "title": { "type": "string" },
        "salary": { "type": "integer", "minimum": 0 },
        "equity": { "type": "number", "minimum": 0, "maximum": 1 },
        "company_handle": { "type": "string", "maxLength": 25 }
    },
    "additionalProperties": false,
    "required": ["title", "equity"]
}